{% extends 'base.html.twig' %}

{% block title %}Tous les artistes{% endblock %}

{% block body %}
    <div class="container">
        <table class="table">
            <h1 class="mt-3" style="text-align:center">Tous les artistes</h1>
            <a href="{{ path('app_web_artist_new') }}" class="btn btn-outline-dark" style="float:right">Ajouter <i class="fas fa-plus"></i></a>

            <thead class="mt-5">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for artist in artists %}
                <tr>
                    <td>{{ artist.id }}</td>
                    <td><a href="{{ path('app_web_artist_show', {'id': artist.id}) }}">{{ artist.name }}</a></td>
                    <td>
                        <a href="{{ path('app_web_artist_edit', {'id': artist.id}) }}" class="btn btn-outline-primary"><i class="fas fa-pencil-alt"></i></a>
                        <a href="{{ path('app_web_artist_delete', {'id': artist.id}) }}" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
